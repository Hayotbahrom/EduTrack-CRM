@model IEnumerable<EduTrack.Service.DTOs.StudentGroups.StudentGroupResultDto>

@{
    ViewData["Title"] = "Guruh Talabalar";
    var group = ViewBag.Group as dynamic;
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2">
                <i class="bi bi-people-fill"></i> @group.Name - Talabalar
            </h1>
            <p class="text-muted">Fani: <strong>@group.Subject</strong></p>
        </div>
        <div>
            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#enrollmentModal">
                <i class="bi bi-plus-circle"></i> Talab Qo'shish
            </button>
            <a href="@Url.Action("Details", "Group", new { id = group.Id })" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Orqaga
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Students Table -->
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Jami Talabalar: <strong>@Model.Count()</strong>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%">ID</th>
                                <th style="width: 25%">Ismi</th>
                                <th style="width: 20%">Familiyasi</th>
                                <th style="width: 20%">Telefon</th>
                                <th style="width: 20%">Ro'yxatga Qo'shilgan</th>
                                <th style="width: 10%">Amallar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var studentGroup in Model)
                            {
                                <tr>
                                    <td><strong>#@studentGroup.Student.Id</strong></td>
                                    <td>@studentGroup.Student.FirstName</td>
                                    <td>@studentGroup.Student.LastName</td>
                                    <td>@studentGroup.Student.PhoneNumber</td>
                                    <td>
                                        <small class="text-muted">
                                            @studentGroup.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <button type="button"
                                                class="btn btn-sm btn-danger remove-btn"
                                                data-student-id="@studentGroup.Student.Id"
                                                data-group-id="@group.Id">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3">
                Hali talaba yoq.
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#enrollmentModal">
                    Birinchi talab qo'shish
                </button>
            </p>
        </div>
    }
</div>

<!-- Enrollment Modal -->
@Html.Partial("_EnrollmentModal")

<script>
    // Remove student from group
    document.querySelectorAll('.remove-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            if (!confirm('Ushbu talab-ni guruhdan chiqarishni xohlaymisiz?')) return;

            const studentId = this.dataset.studentId;
            const groupId = this.dataset.groupId;

            try {
                const response = await fetch('/StudentGroup/Remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `studentId=${studentId}&groupId=${groupId}`
                });

                const result = await response.json();

                if (result.success) {
                    alert('Talab muvaffaqiyatli chiqarildi!');
                    location.reload();
                } else {
                    alert('Xatolik: ' + result.message);
                }
            } catch (error) {
                alert('Xatolik: ' + error.message);
            }
        });
    });
</script>