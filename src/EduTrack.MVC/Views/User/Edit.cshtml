@model EduTrack.Service.DTOs.Users.UserUpdateDto

@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2"><i class="bi bi-pencil-square"></i> Edit User</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i> <strong>Please fix the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" name="Id" value="@Model.Id">

                        <!-- First Name -->
                        <div class="mb-3">
                            <label class="form-label">First Name *</label>
                            <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" required>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label class="form-label">Last Name *</label>
                            <input type="text" class="form-control" name="LastName" value="@Model.LastName" required>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber">
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label class="form-label">Role *</label>
                            <select class="form-select" name="Role" required>
                                <option value="">-- Select Role --</option>
                                @if (ViewBag.Roles != null)
                                {
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        var isSelected = (int)Model.Role == role.Value;
                                        if (isSelected)
                                        {
                                            <option value="@role.Value" selected>@role.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@role.Value">@role.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>

                        <!-- Password (Optional for Edit) -->
                        <div class="mb-3">
                            <label class="form-label">New Password (Leave blank to keep current)</label>
                            <input type="password" class="form-control" name="PasswordHash" placeholder="Enter new password only if you want to change it">
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-info-circle"></i> Only enter if you want to change the password
                            </small>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>