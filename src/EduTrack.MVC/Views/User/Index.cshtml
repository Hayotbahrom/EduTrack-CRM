@model IEnumerable<EduTrack.Service.DTOs.Users.UserResultDto>

@{
    ViewData["Title"] = "Users Management";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2"><i class="bi bi-people"></i> Users Management</h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create", "User")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add User
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td><strong>@user.FirstName @user.LastName</strong></td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                <span class="badge bg-secondary">@user.Role</span>
                            </td>
                            <td>
                                <small class="text-muted">@user.CreatedAt.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-sm btn-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No users found.
            <a href="@Url.Action("Create", "User")">Create one</a>
        </div>
    }
</div>