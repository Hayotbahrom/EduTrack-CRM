@model IEnumerable<EduTrack.Service.DTOs.Students.StudentResultDto>

@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2"><i class="bi bi-people-fill"></i> Students</h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create", "Student")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Student
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Parent Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                @student.Id
                                <!-- Student/Details.cshtml-da -->
                                <a href="@Url.Action("Enrollment", "StudentGroup", new { studentId = student.Id })"
                                   class="btn btn-primary">
                                    Guruhlari
                                </a>
                            </td>
                            <td><strong>@student.FirstName @student.LastName</strong></td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.ParentPhoneNumber</td>
                            <td>
                                <a href="@Url.Action("Details", "Student", new { id = student.Id })" class="btn btn-sm btn-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Student", new { id = student.Id })" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No students found.
            <a href="@Url.Action("Create", "Student")">Create one</a>
        </div>
    }
</div>