@model EduTrack.Service.DTOs.Rooms.RoomUpdateDto

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2"><i class="bi bi-pencil-square"></i> Edit Room</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i> <strong>Please fix the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form method="post">
                        <input type="hidden" name="Id" value="@Model.Id">

                        <!-- Branch -->
                        <div class="mb-3">
                            <label class="form-label">Branch *</label>
                            <select class="form-select" name="BranchId" required>
                                <option value="">-- Select Branch --</option>
                                @if (ViewBag.Branches != null)
                                {
                                    @foreach (var branch in ViewBag.Branches)
                                    {
                                        if (Model.BranchId == branch.Id)
                                        {
                                            <option value="@branch.Id" selected>@branch.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@branch.Id">@branch.Name</option>
                                        }
                                    }
                                }
                            </select>
                            @if (ViewData.ModelState.ContainsKey("BranchId") && ViewData.ModelState["BranchId"].Errors.Count > 0)
                            {
                                <small class="text-danger d-block mt-1">@ViewData.ModelState["BranchId"].Errors[0].ErrorMessage</small>
                            }
                        </div>

                        <!-- Name -->
                        <div class="mb-3">
                            <label class="form-label">Room Name *</label>
                            <input type="text" class="form-control" name="Name" value="@Model.Name" required>
                            @if (ViewData.ModelState.ContainsKey("Name") && ViewData.ModelState["Name"].Errors.Count > 0)
                            {
                                <small class="text-danger d-block mt-1">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</small>
                            }
                        </div>

                        <!-- Capacity -->
                        <div class="mb-3">
                            <label class="form-label">Capacity (Students) *</label>
                            <input type="number" class="form-control" name="Capacity" value="@Model.Capacity" min="1" required>
                            @if (ViewData.ModelState.ContainsKey("Capacity") && ViewData.ModelState["Capacity"].Errors.Count > 0)
                            {
                                <small class="text-danger d-block mt-1">@ViewData.ModelState["Capacity"].Errors[0].ErrorMessage</small>
                            }
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="Description" rows="3">@Model.Description</textarea>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>