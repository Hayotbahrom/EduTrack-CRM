@model IEnumerable<EduTrack.Service.DTOs.Rooms.RoomResultDto>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2"><i class="bi bi-door-closed"></i> Rooms</h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create", "Room")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Room
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Capacity</th>
                        <th>Branch</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>@room.Id</td>
                            <td><strong>@room.Name</strong></td>
                            <td>
                                <span class="badge bg-info">@room.Capacity</span>
                            </td>
                            <td>
                                @if (room.Branch != null)
                                {
                                    <span>@room.Branch.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@(string.IsNullOrEmpty(room.Description) ? "-" : room.Description)</td>
                            <td>
                                <a href="@Url.Action("Details", "Room", new { id = room.Id })" class="btn btn-sm btn-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Room", new { id = room.Id })" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Room", new { id = room.Id })" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No rooms found.
            <a href="@Url.Action("Create", "Room")">Create one</a>
        </div>
    }
</div>