@model IEnumerable<EduTrack.Service.DTOs.Branches.BranchResultDto>

@{
    ViewData["Title"] = "Branches";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2"><i class="bi bi-building"></i> Branches</h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create", "Branch")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Branch
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model)
                    {
                        <tr>
                            <td>@branch.Id</td>
                            <td><strong>@branch.Name</strong></td>
                            <td>@branch.Address</td>
                            <td>@branch.PhoneNumber</td>
                            <td>
                                <a href="@Url.Action("Details", "Branch", new { id = branch.Id })" class="btn btn-sm btn-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Branch", new { id = branch.Id })" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Branch", new { id = branch.Id })" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No branches found.
            <a href="@Url.Action("Create", "Branch")">Create one</a>
        </div>
    }
</div>